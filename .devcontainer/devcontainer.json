// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
	"name": "Java 21 Docker-in-Docker Dev Container",
	"image": "mcr.microsoft.com/devcontainers/java:21",
	"forwardPorts": [8080, 3000],

	"features": {
		
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "false"
		} 
	}, 

    "customizations": {
        "vscode": {
            "extensions": [
                    "vscjava.vscode-java-pack"
                ],
        "settings": {}
        }
     }, 

	"mounts": [
		"source=${localEnv:HOME}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.vaadin,target=/dot-vaadin,type=bind,consistency=cached,readonly"
	] 
}